{
  "name": "polkadot-x402",
  "version": "0.1.0",
  "description": "X402 payment protocol implementation for Polkadot Hub TestNet (EVM-compatible). Provides facilitator functions, client utilities, and axios wrapper for HTTP 402 Payment Required responses.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "polkadot",
    "polkadot-hub",
    "x402",
    "payment",
    "http-402",
    "blockchain",
    "evm",
    "ethereum",
    "micropayments",
    "api-monetization"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/polkadot-x402.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/polkadot-x402/issues"
  },
  "homepage": "https://github.com/yourusername/polkadot-x402#readme",
  "dependencies": {
    "@polkadot/api": "^12.0.0",
    "@polkadot/keyring": "^13.0.0",
    "@polkadot/util": "^13.0.0",
    "@polkadot/util-crypto": "^13.0.0",
    "axios": "^1.13.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsup": "^8.0.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "axios": "^1.0.0"
  }
}

